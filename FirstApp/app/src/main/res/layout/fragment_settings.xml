<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomNavFragments.HomeFragment"
    android:background="@color/white"
    android:layout_below="@+id/topBar"
    android:layout_above="@+id/bottomNavigationView"
    android:layout_marginBottom="81dp"
    android:layout_marginTop="80dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/layoutGoal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:backgroundTint="@color/green"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="20dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <ImageView
                    android:id="@+id/animalsButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:contentDescription="Animals"
                    android:padding="8dp"
                    android:src="@drawable/ic_edit_svgrepo_com"/>
                <Button
                    android:id="@+id/editButton"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center"
                    android:backgroundTint="@color/greenSplash"
                    android:text="EDIT PROFILE"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:textStyle="bold"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutConnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_margin="20dp"
                android:background="@drawable/background"
                android:backgroundTint="@color/green"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.962"
                app:layout_constraintStart_toEndOf="@+id/layoutGoal"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/layoutImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:contentDescription="Animals"
                    android:padding="8dp"
                    android:src="@drawable/ic_layout_svgrepo_com"/>
                <Button
                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center"
                    android:backgroundTint="@color/greenSplash"
                    android:text="CHANGE PASSWORD"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:textStyle="bold"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutVeterinary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:backgroundTint="@color/green"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="20dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutGoal"
                >

                <ImageView
                    android:id="@+id/helpImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:contentDescription="Animals"
                    android:padding="8dp"
                    android:src="@drawable/ic_help_svgrepo_com"/>
                <Button
                    android:id="@+id/editPublic"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center"
                    android:backgroundTint="@color/greenSplash"
                    android:text="PUBLIC PROFILE"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutWalkers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_margin="20dp"
                android:background="@drawable/background"
                android:backgroundTint="@color/green"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.962"
                app:layout_constraintStart_toEndOf="@+id/layoutGoal"
                app:layout_constraintTop_toBottomOf="@+id/layoutConnect">

                <ImageView
                    android:id="@+id/walkerEdit"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:contentDescription="Animals"
                    android:padding="8dp"
                    android:src="@drawable/ic_dog_in_front_of_a_man_svgrepo_com"/>
                <Button
                    android:id="@+id/editWalker"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center"
                    android:backgroundTint="@color/greenSplash"
                    android:text="WALKER PROFILE"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:textStyle="bold"/>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>