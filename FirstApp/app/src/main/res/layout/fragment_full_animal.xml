<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".animalsFragment.FullAnimalFragment"
    android:layout_above="@+id/bottomNavigationView"
    android:layout_marginBottom="125dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="380dp"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/animalImage"
                android:layout_width="93dp"
                android:layout_height="110dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_home" />

            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@id/animalImage"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="102dp"
                android:layout_height="27dp"
                android:layout_below="@id/animalImage"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/locationIcon"
                android:layout_toRightOf="@id/locationIcon"
                android:text="Maps Location"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/animalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="35dp"
                android:layout_toEndOf="@id/animalImage"
                android:layout_toRightOf="@+id/animalImage"
                android:text="Johny"
                android:textColor="@color/green"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/animalType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animalName"
                android:layout_marginLeft="35dp"
                android:layout_toEndOf="@id/animalImage"
                android:text="Dog  -"
                android:textColor="@color/green"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/animalBreed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animalName"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@id/animalType"
                android:layout_toRightOf="@id/animalType"
                android:text="Chihuaha"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/animalCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animalDescription"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/animalImage"
                android:layout_toRightOf="@id/locationText"
                android:text="Barcelona"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/animalStreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animalDescription"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="-57dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/animalCity"
                android:layout_toRightOf="@id/animalCity"
                android:text="Major de Sarria"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/animalEmailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animalCity"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="33dp"
                android:layout_toEndOf="@id/animalImage"
                android:layout_toRightOf="@id/locationText"
                android:text="If found please contact:"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/animalEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animalStreet"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="33dp"
                android:layout_toEndOf="@id/animalEmailText"
                android:layout_toRightOf="@id/animalEmailText"
                android:text="robbie@robbie.com"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/animalDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animalType"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@id/animalImage"
                android:text="Very peacuful dog with blue eyes"
                android:textColor="@color/black"
                android:textSize="13sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>