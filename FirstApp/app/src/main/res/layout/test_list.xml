<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment"
    android:background="@color/white"
    android:layout_below="@+id/topBar"
    android:layout_above="@+id/bottomNavigationView"
    android:layout_marginBottom="81dp"
    android:layout_marginTop="80dp"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <LinearLayout
                android:id="@+id/edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:backgroundTint="@color/green"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="15dp"
                android:layout_marginTop="85dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                >

                <ImageView
                    android:id="@+id/animalsButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:contentDescription="Animals"
                    android:padding="8dp"
                    android:src="@drawable/ic_edit_svgrepo_com"/>
                <Button
                    android:id="@+id/editButton"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center"
                    android:backgroundTint="@color/greenSplash"
                    android:text="EDIT PROFILE"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:textStyle="bold"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:backgroundTint="@color/green"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="15dp"
                android:layout_marginTop="85dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toEndOf="@+id/edit"
                app:layout_constraintTop_toTopOf="parent"

                >

                <ImageView
                    android:id="@+id/layoutImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:contentDescription="Animals"
                    android:padding="8dp"
                    android:src="@drawable/ic_layout_svgrepo_com"/>
                <Button
                    android:id="@+id/editLayout"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center"
                    android:backgroundTint="@color/greenSplash"
                    android:text="CHANGE PASSWORD"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/help"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:backgroundTint="@color/green"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="15dp"
                android:layout_marginTop="85dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toEndOf="@+id/layout2"
                app:layout_constraintTop_toTopOf="parent"

                >

                <ImageView
                    android:id="@+id/helpImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:contentDescription="Animals"
                    android:padding="8dp"
                    android:src="@drawable/ic_help_svgrepo_com"/>
                <Button
                    android:id="@+id/editHelp"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:gravity="center"
                    android:backgroundTint="@color/greenSplash"
                    android:text="PUBLIC/WALKER"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:textStyle="bold"/>

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>